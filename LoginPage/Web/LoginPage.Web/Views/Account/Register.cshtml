        <script>
    $(document).ready(function () {
        $('#registerForm').submit(function (event) {
            var email = $('#Email').val();
            var phone = $('#Phone').val();
            var password = $('#Password').val();
            var repassword = $('#RePassword').val();

            if (!isValidEmail(email)) {
                event.preventDefault();
                showToastrError('Lütfen geçerli bir e-posta adresi girin.');
                return;
            }

            if (!isValidPhone(phone)) {
                event.preventDefault();
                showToastrError('Lütfen geçerli bir telefon numarası girin.');
                return;
            }

            if (!isValidPassword(password)) {
                event.preventDefault();
                showToastrError('Şifre en az 6 karakter uzunluğunda, büyük harf, küçük harf, rakam ve sembol içermelidir.');
                return;
            }

            if (password !== repassword) {
                event.preventDefault();
                showToastrError('Şifreler eşleşmiyor.');
                return;
            }
        });

        function isValidEmail(email) {
            var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            return emailRegex.test(email);
        }

        function isValidPhone(phone) {
            var phoneRegex = /^\d+$/;
            return phoneRegex.test(phone);
        }

        function isValidPassword(password) {
            var passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{6,}$/;
            return passwordRegex.test(password);
        }

        function showToastrError(message) {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-left",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "60000",
                "extendedTimeOut": "60000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut",
                "toastClass": "toast",
                "escapeHtml": true,
                "closeHtml": "<button>&times;</button>",
                "closeMethod": "fadeOut",
                "closeDuration": "300",
                "closeEasing": "swing",
                "onclick": null,
                "showEasing": "swing",
                "showDuration": "300",
                "hideEasing": "linear",
                "hideDuration": "1000",
                "z-index": 30000
            };
            toastr.error(message);
        }
    });
